void numere()
{
    int a,b,suma,produs,a1,b1;

    printf("Introduceti nr a: "); scanf("%d",&a);
    printf("Introduceti nr b: "); scanf("%d",&b);

    a1 = 100 - a;
    b1 = 100 - b;

    suma = 100 - (a1 + b1);

    produs = a1 * b1;

    printf("Produsul nr introduse este: %d%d",suma,produs);
}


